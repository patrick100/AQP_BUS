<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353E4F"

    tools:context="com.example.hello.map.Login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <ImageView
            android:id="@+id/google_login"
            android:layout_width="168dp"
            android:layout_height="74dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:onClick="imageClick"
            app:srcCompat="@drawable/google_login"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/facebook_login"
            android:layout_width="178dp"
            android:layout_height="72dp"
            android:layout_margin="2dp"
            android:clickable="true"
            android:onClick="imageClick"
            app:srcCompat="@drawable/facebook_login"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="fill_parent"
        android:layout_height="356dp"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.40"
            app:srcCompat="@drawable/bus_app"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView2"
            style="@style/textView_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Bus Hack"
            android:textColor="#6F7A8B"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/email"
            style="@style/editText_style"
            android:hint="@string/hint1"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            style="@style/editText_style"
            android:ellipsize="start"
            android:hint="@string/hint2"
            android:inputType="textPassword"
            android:maxLines="1" />

        <Button
            android:id="@+id/button"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goActivity"
            android:text="Login"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView"
            style="@style/textView_style"
            android:text="forgot your password?"
            android:textColor="#ffffff"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
